<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PromotionFragment"
    android:background="@color/gray_bg">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_edit_text"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/orderMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promotion"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderMessageTitle"
                android:text="Your order is completed. We hope you're happy with you're purchase."
                android:textStyle="bold"
                android:textColor="@color/gray_ft"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="11/11/2023"
                android:textColor="@color/gray_ft"
                android:textSize="11sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>